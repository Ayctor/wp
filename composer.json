{
    "name": "ayctor/wp",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Damien Couteillou",
            "email": "damien@ayctor.com"
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "description": "WP boilerplate from Ayctor",
    "minimum-stability": "dev",
    "require": {
        "php": "^7.0",
        "ayctor/wp-core": "dev-master",
        "vlucas/phpdotenv": "^2.5@dev"
    },
    "autoload": {
        "psr-4": {
            "Ayctor\\": "app/"
        }
    }
}
